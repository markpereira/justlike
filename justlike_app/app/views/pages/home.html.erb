<h1>This is the home page<h1>
<p>this is where you sign up </p>


  <%= form_tag '/login' do %>
  <div class="form-group">
    <%= label_tag 'name	' %>
    <%= text_field_tag 'name', nil, :autofocus => true, :placeholder => 'craigsy', :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag 'password' %>
    <%= password_field_tag 'password', nil, :class => 'form-control' %>
  </div>
  <%= submit_tag 'Login', :class => 'btn btn-info' %>
<% end %>

